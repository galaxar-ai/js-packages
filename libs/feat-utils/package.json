{
    "name": "@galaxar/feat-utils",
    "version": "1.2.3",
    "description": "Node common application utility features",
    "main": "cjs/index.js",
    "module": "lib/index.js",
    "react-native": "lib/index.js",
    "exports": {
        ".": {
            "import": "./lib/index.js",
            "require": "./cjs/index.js"
        },
        "./*": {
            "import": "./src/*.js",
            "require": "./cjs/*.js"
        },
        "./**/*": {
            "import": "./src/**/*.js",
            "require": "./cjs/**/*.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "author": "Rockie Guo <rockie@kitmi.com.au>",
    "scripts": {
        "test": "pnpm build && mocha --recursive test/**/*.spec.js",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive test/**/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "lint": "eslint \"**/*.js\"",
        "lint-fix": "eslint \"**/*.js\" --fix",
        "clean": "shx rm -rf cjs",
        "build": "pnpm clean && swc lib/**/*.js -d ./cjs"
    },
    "keywords": [
        "galaxar",
        "app",
        "common",
        "feature",
        "cipher",
        "hash",
        "image processing",
        "ttl cache",
        "websocket client"
    ],
    "nyc": {
        "exclude": [
            ".*",
            "cjs",
            "test",
            "**/*.spec.js"
        ]
    },
    "dependencies": {
        "@galaxar/app": "workspace:*",
        "@galaxar/types": "workspace:*",
        "@galaxar/utils": "workspace:*",
        "collections": "^5.1.13",
        "fast-xml-parser": "^4.2.4",
        "node-cache": "^5.1.2",
        "sharp": "^0.33.2",
        "ws": "^8.13.0"
    },
    "devDependencies": {
        "@galaxar/sys": "workspace:*"
    },
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    },
    "license": "MIT"
}
